{
    "compilerOptions": {
        "rootDir": "./",
        "outDir": ".",
        "lib": ["esnext"],
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true
    },
    "include": [
        "./index.ts"
    ],
    "exclude": ["node_modules"]
}